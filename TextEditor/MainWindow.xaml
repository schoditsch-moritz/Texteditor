<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="TextEditor" 
        Height="450" 
        Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30" UseAeroCaptionButtons="True" ResizeBorderThickness="2" />

    </WindowChrome.WindowChrome>

    <Grid FocusManager.FocusedElement="{Binding ElementName=tb_main}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- TextBox -->
        <TextBox x:Name="tb_main" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                 Background="White" BorderThickness="0" FontSize="15" 
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                 AcceptsReturn="True" Padding="5" TextChanged="updateInfo"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#f5f5f5" Grid.ColumnSpan="2">
            <Button Padding="20 0" Foreground="Black" Background="Transparent" BorderThickness="0" Click="btn_Save">Save</Button>
            <Button Padding="20 0" Foreground="Black" Background="Transparent" BorderThickness="0" Click="btn_Load">Load</Button>

            <StackPanel.Effect>
                <DropShadowEffect BlurRadius="2" RenderingBias="Quality" ShadowDepth="0"/>
            </StackPanel.Effect>
        </StackPanel>
        
        <!-- Title & Quit -->
        <Grid Grid.Row="0" Background="#525252" Grid.ColumnSpan="2">
            <Label x:Name="lbl_name" HorizontalAlignment="Center" FontSize="14" Foreground="#a3a3a3">Texteditor</Label>
            <Button x:Name="test" Width="40" BorderThickness="0" HorizontalAlignment="Right" Foreground="White" Background="Transparent" Click="btn_Quit" WindowChrome.IsHitTestVisibleInChrome="True" >
                X
            </Button>
           
        </Grid>
        
        <!-- Amount of Lines / Zeichen -->
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Background="White" >
            <Label x:Name="lbl_info" Content="1 Line | 0 Characters" HorizontalAlignment="Right" Margin="0 0 10 0" />

            <Grid.Effect>
                <DropShadowEffect BlurRadius="2" RenderingBias="Quality" ShadowDepth="0"/>
            </Grid.Effect>
        </Grid>
    </Grid>
</Window>
